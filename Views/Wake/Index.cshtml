@model IEnumerable<Device>

@{
    ViewData["Title"] = "Wake";
}

<h2>Wake</h2>

@if (@Model.Count() == 0) {
    @:<p>There are no devices in the database. <a href="/device/add">Add one</a></p>
}
else {
    <ul>
        @foreach (var device in Model)
        {
            <li>
                <a class="btn btn-primary btn-lg" asp-action="Up" asp-route-id="@device.Id">@device.Name</a>
            </li>
        }
    </ul>
}